<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="24dp"
                android:textColor="@color/black"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:foreground="@drawable/icon_profile_border"
                >

                <ImageView
                    android:clickable="true"
                    android:id="@+id/editprofile_picture_imageview"
                    android:layout_width="256px"
                    android:layout_height="256px"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama lengkap"
                    android:fontFamily="@font/poppins_reguler"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-14dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editprofile_nama_textedit"
                        android:paddingLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:fontFamily="@font/poppins_reguler"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:background="@drawable/universal_white_textinput"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/poppins_reguler"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="-14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editprofile_emil_textedit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingLeft="16dp"
                        android:editable="false"
                        android:textColor="@color/mid_gray"
                        android:fontFamily="@font/poppins_reguler"
                        android:textSize="14dp"
                        android:background="@drawable/universal_white_textinput"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor telepon"
                    android:fontFamily="@font/poppins_reguler"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="-14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editprofile_telepon_textedit"
                        android:paddingLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:fontFamily="@font/poppins_reguler"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:inputType="phone"
                        android:background="@drawable/universal_white_textinput"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:layout_marginTop="64dp"
                android:id="@+id/editprofile_save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:background="@drawable/universal_yellow_button"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>