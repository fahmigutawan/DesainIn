<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="32dp">

            <LinearLayout
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profilfragment_picture_imageview"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    >

                    <TextView
                        android:id="@+id/profilefragment_name_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=". . ."
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/profilefragment_email_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text=". . ."
                        android:textColor="@color/blue_dark"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilfragment_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/universal_yellow_button"
                android:text="Edit Profil"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:drawableEnd="@drawable/icon_next"
                android:textAllCaps="false"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilfragment_desainertersimpan_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/universal_yellow_button"
                android:text="Desainer Tersimpan"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:drawableEnd="@drawable/icon_next"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilfragment_riwayatorder_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/universal_yellow_button"
                android:text="Riwayat Order"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:drawableEnd="@drawable/icon_next"
                android:textAllCaps="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profilfragment_logout_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginLeft="64dp"
                android:background="@drawable/universal_red_button"
                android:text="Log out"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:drawableEnd="@drawable/icon_logout"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>