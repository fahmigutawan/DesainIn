<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:background="@color/color_palet_blue"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hubungi Kami"
                android:textSize="20dp"
                android:fontFamily="@font/sfpro_display_black_bold"
                android:textColor="@color/white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_marginTop="16dp">

            <TextView
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kami disini ada untuk membantu pengalaman menggunakan DesainIn menjadi lebih baik."
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_medium"
                />

            <TextView
                android:layout_marginTop="32dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_display_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tersedia Senin - Jumat 09.30 - 17.30" />

            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instagram DesainIn"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/sfpro_display_medium"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="\@DesainIn"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:gravity="end"
                    android:fontFamily="@font/sfpro_display_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email DesainIn"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/sfpro_display_medium" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cs@desainin.com"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/sfpro_display_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WhatsApp DesainIn"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/sfpro_display_medium" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="089614504876"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/sfpro_display_medium" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>