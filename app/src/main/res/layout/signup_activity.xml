<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="start"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="36dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingBottom="32dp"
                android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:text="Nama Lengkap"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signupactivity_nama_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/universal_white_textinput"
                    android:fontFamily="@font/poppins_reguler"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingTop="16dp"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/universal_white_textinput"
                >

                <Spinner
                    android:id="@+id/signupactivity_klmn_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingTop="16dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signupactivity_emil_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/universal_white_textinput"
                    android:fontFamily="@font/poppins_reguler"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingTop="16dp"
                android:text="Nomor Telepon"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signupactivity_telpon_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/universal_white_textinput"
                    android:fontFamily="@font/poppins_reguler"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingTop="16dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                android:layout_marginTop="-8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signupactivity_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/universal_white_textinput"
                    android:fontFamily="@font/poppins_reguler"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_reguler"
                android:paddingTop="16dp"
                android:text="Konfirmasi Password"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                android:layout_marginTop="-8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signupactivity_passwordconfirm_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/universal_white_textinput"
                    android:fontFamily="@font/poppins_reguler"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupactivity_signup_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:layout_marginTop="42dp"
                android:background="@drawable/universal_darkblue_button"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>